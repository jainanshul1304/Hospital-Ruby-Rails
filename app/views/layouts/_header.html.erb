<header>
  <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
    <div class="container">
      <%= link_to "KD Hospital", root_path, class: 'navbar-brand brand-name' %>
      
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <% if logged_in? %>
            <li class="nav-item">
              <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Add", new_patient_path, class: "nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "Clean", clean_path, class: "nav-link", method: :delete, data: { confirm: "Are you sure?" } %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to "Register", register_path, class: "nav-link" %>
            </li>
          <% end %>
        </ul>

        <%= form_tag(patients_path, method: "get", class: "form-inline my-2 my-lg-0") do %>
          <div class="input-group">
            <%= text_field_tag(:term, params[:term], type: "search", placeholder: "Search by category...", class: "form-control") %>
            <div class="input-group-append">
              <%= submit_tag("Search", class: "btn btn-primary") %>
            </div>
          </div>
        <% end %>

        <%= session_link %>
      </div>
    </div>
  </nav>
</header>
